<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/moviebackdrop"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="fill_parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <View
            android:id="@+id/theblankview"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />


            <LinearLayout
                android:id="@+id/thedetaillayout"
                android:layout_width="match_parent"
                android:layout_below="@id/theblankview"
                android:visibility="gone"
                android:orientation="vertical"
                android:background="@color/lightpinkbackgroundonealpha"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/moviedesc"
                    android:textColor="@color/antique_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/moviedesc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                </LinearLayout>

        </RelativeLayout>


    </ScrollView>

    </RelativeLayout>

